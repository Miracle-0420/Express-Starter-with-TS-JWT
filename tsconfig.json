// Good
{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./built",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["esnext"],
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "typeRoots": ["./typings"],
    "outFile": "./built/combined.js"
  },
  "include": ["./**/*"],
  "exclude": [
    "./plugins/**/*",
    "./typings/**/*",
    "node_modules",
    "./built/**/*" // This is what fixed it!
  ]
}
